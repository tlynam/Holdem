<h1>Listing players</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Gravatar url</th>
      <th>Seat</th>
      <th>Chips</th>
      <th>Cards</th>
      <th>Live hand</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.username %></td>
        <td><%= player.gravatar_url %></td>
        <td><%= player.seat %></td>
        <td><%= player.chips %></td>
        <td><%= player.cards %></td>
        <td><%= player.live_hand %></td>
        <td><%= player.action %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

